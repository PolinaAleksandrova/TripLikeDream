block headerForRegist
include headerForRegist.pug

block css
<link rel="stylesheet" type="text/css" href="../css/main.css" />
<link rel="stylesheet" type="text/css" href="../css/authStyle.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">


<div class = "center">
  <h2>Реєстрація</h2>
  <form action="/auth/registration" method="POST">

    <div class="txt_field">
      <input type="text" name="login" class="form-control" required>
      <label>Введіть email <span>#{errLogin}</span></label>
    </div>
    <div class="txt_field">
      <input type="password" name="password" class="form-control" required >
      <label>Введіть пароль <span>#{errPassword}</span></label>
    </div>
    <div class="txt_field">
      <input type="password" name="passwordRepeat" class="form-control" required>
      <label>Введіть пароль знову <span>#{errPasswordRepeat}</span></label>
    </div>
    <div class="txt_field">
      <input type="text" name="lastName" class="form-control" required>
      <label>Введіть прізвище</label>
    </div>
    <div class="txt_field">
      <input type="text" name="firstName" class="form-control" required>
      <label>Введіть ім'я</label>
    </div>
    <div class="txt_field">
      <input type="text" name="phoneNumber" class="form-control" required>
      <label>Введіть телефон <span>#{errPhoneNumber}</span></label>
    </div>
    <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Зареєструватися</button>
    <div class = "signup_link">
      <p>Вже зареєстровані? <a href = "/auth/login">Увійти</a></p>
    </div>
  </form>
</div>
