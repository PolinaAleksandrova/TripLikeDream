extends admin.pug
block css
    <link rel="stylesheet" type="text/css" href="../css/adminAreaStyle.css" />
    <link rel="stylesheet" type="text/css" href="../css/main.css" />

block content
    .place-temp
        <div class="container p-4">
        <div class="row">
            each category in categories
                .place-list
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">                 
                            <p>#{category.name}</p>           
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href='/admin/deleteCategory/#{category._id}' onclick="return confirm('Видалити місце?')" class="btn btn-warning">Видалити</a>
                            <a href='/admin/editCategory/#{category._id}' class="btn btn-secondary">Редагувати</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                