extends admin.pug
block css
   <link rel="stylesheet" type="text/css" href="../css/main.css" />

block content
    .place-temp
        <div class="container p-4">
        <div class="row">
            each comment in comments
                .place-list
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">      
                            <p>#{comment.user[0].lastName}</p>    
                            <p>#{comment.user[0].firstName}</p>     
                            <p>#{comment.content}</p>   
                            <p>#{comment.place[0].name}</p>                             
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href="/admin/deleteComment/#{comment._id}" onclick="return confirm('Видалити коментар?')" class="btn btn-warning">Видалити</a>               
                        </div>
                    </div>
                </div>
            </div>
        </div>
                